<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_shop_photo"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/p2" />

        <TextView
            android:id="@+id/iv_shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginTop="3dp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/jfflat"
            android:lines="1"
            android:maxLines="1"
            android:text="قسم ملابس الاطفال"
            android:textColor="@color/first_font"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/iv_shop_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingExtra="4dp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/jfflat"
            android:lines="2"
            android:maxLines="2"
            android:layout_margin="3dp"
            android:text="قسم ملابس الاطفال"
            android:textColor="@color/second_font"
            android:textSize="10sp" />
    </LinearLayout>
</android.support.v7.widget.CardView>